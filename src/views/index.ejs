<!DOCTYPE html>
<html lang="pt-br">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Início'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <!-- Banner -->
    <div class="banner"></div>
    <!-- /Banner -->

    <!-- última visita -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Baseado em sua última visita</h2>
        </div>
        <!-- Show the "visited" products -->
        <% for (const product of visited) { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/products/detail/<%= product.id %>">
                <figure class="product-box_image">
                  <img
                    src="/images/products/<%= product.image %>"
                    alt="imagem do produto"
                  />
                </figure>
                <article class="product-box_data">
                  <h2> <!-- desconto de 5% ou seja 100 -5 / 100 = 0.95 o valor original  -->
                    <%= toThousand(calculateDiscount(product.price, product.discount)) %>R$
                  </h2>
                  <% if (product.discount !== 0) { %><span><%= product.discount %>% OFF</span> <% } %>
                  <p><%= product.name %></p>
                  <i class="fas fa-truck"></i>
                </article>
              </a>
            </section>
        </div>
        <% } %>
      </div>
    </div>
    <!-- /ultima visita -->

    <!-- Ofertas -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Ofertas</h2>
        </div>
        <!-- Show the "in-sale" products -->
        <% for (const product of inSale) { %> 
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/products/detail/¿?">
                <figure class="product-box_image">
                  <img src="/images/products/<%= product.image %>" alt="imagem do produto" />
                </figure>
                <article class="product-box_data">
                  <h2><%= toThousand(calculateDiscount(product.price, product.discount)) %>R$</h2>
                  <span><%= product.discount %>% OFF</span>
                  <p><%= product.name %></p>
                  <i class="fas fa-truck"></i>
                </article>
              </a>
            </section>
          </div>
        <% } %> 
      </div>
    </div>
    <!-- /Ofertas -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
